{
  "compilerOptions": {
    "types": [
      "reflect-metadata",
      "node"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@base/*": ["base/*"],
      "@config/*": ["config/*"],
      "@infra/*": ["infra/*"],
      "@pages/*": ["pages/*"],
      "@router/*": ["router/*"],
      "@uikit/*": ["uikit/*"],
      "@views/*": ["views/*"],
      "@assets/*": ["assets/*"],
    }
  },
  "include": [
    "src",
  ]
}
